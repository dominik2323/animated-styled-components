{
  "name": "motion-styled-components",
  "version": "0.1.0",
  "description": "Animate styled-components with framer-motion",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts",
    "watch": "nodemon --watch src/index.tsx --exec 'pnpm run build'",
    "release": "pnpm run build && changeset publish",
    "lint": "tsc"
  },
  "keywords": [
    "styled-components",
    "framer-motion",
    "animation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dominik2323/animated-styled-components.git"
  },
  "author": "Dominik Tomcik",
  "license": "MIT",
  "peerDependencies": {
    "framer-motion": ">= 10.12.0",
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0",
    "styled-components": ">= 5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "nodemon": "^3.1.4",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  }
}
